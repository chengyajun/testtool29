<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="#fff"
    tools:context="com.qihoo.testtools_new.WelcomeActivity" >

    <ImageView
        android:id="@+id/iv_history_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_history_name"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_history_img"
        android:gravity="center_vertical"
        android:text="手机卫士"
        android:textColor="#727272"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/iv_history_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:src="@drawable/history_back_03" />

    <TextView
        android:id="@+id/tv_history_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_history_more"
        android:layout_marginRight="10dp"
        android:text="08-24  19:12"
        android:textColor="#c0c0c0"
        android:textSize="14sp" />

</RelativeLayout>