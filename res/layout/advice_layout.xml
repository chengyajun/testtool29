<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.qihoo.testtools_new.WelcomeActivity" >

    <RelativeLayout
        android:id="@+id/history_top_banner"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#55a8ea"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/history_manager_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back_img_03"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="意见反馈"
            android:textColor="#fff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您要反馈的问题："
            android:textColor="#898989"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/advice_content_et"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/advice_bg_07"
            android:gravity="top"
            android:hint="请将您对软件的意见说给我们吧~"
            android:lineSpacingExtra="6dp"
            android:textColor="#9e9e9e"
            android:textColorHint="#c0c0c0"
            android:textSize="16sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text="您的联系方式"
            android:textColor="#898989"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/advice_contact_et"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:layout_marginTop="8dip"
            android:background="@drawable/advice_contact_bg_07"
            android:enabled="true"
            android:textColorHint="#c0c0c0"
            android:gravity="center_vertical"
            android:hint="请填写QQ号/飞信号/微信号"
            android:textSize="16sp"
            android:inputType="number"
            android:textColor="#9e9e9e" />

        <Button
            android:id="@+id/advice_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/app_manager_start_btn_03"
            android:text="启动测试"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>